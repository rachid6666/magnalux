procedure TForm4.Panel4Click(Sender: TObject);
var
  i: Integer;
begin
  for i := 0 to ControlCount - 1 do
    if Controls[i] is TPanel then
      if Controls[i] = Sender then
        TPanel(Controls[i]).Color := clHighlight
      else
        TPanel(Controls[i]).Color := clBtnFace;
end;

